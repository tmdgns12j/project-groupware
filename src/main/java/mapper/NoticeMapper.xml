<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.NoticeMapper">
  
  <select id="count" resultType="int">
  select count(*) from notice  
  </select>
  
   <select id="list" resultType="notice"  parameterType="map">
      select * from ( select rownum rnum ,a.* 
				 from (select * from notice order by ref desc , refstep) a )
				 where rnum between #{start} and #{end}
  </select>
   <select id="max" resultType="int">
     select noticeseq.nextval from dual
  </select>
  
   <select id="selectOne" resultType="notice"  parameterType="int">
     select * from notice where num =#{value}
  </select>
  
  <update id="readcntadd" parameterType="int">
  update  notice set readcnt = readcnt + 1   where num =#{value}
  </update>
  
  
  
  <update id="refstepadd" parameterType="map">
  update notice set refstep = refstep + 1 
  	where ref=#{ref} and refstep > #{refstep}
  </update>
  
  
  <insert id="insert"  parameterType="notice">
  insert into notice  (num,name, pass, subject, content, file1, regdate,  
				 readcnt, ref,reflevel,refstep)  
	values(#{num},#{name}, #{pass}, #{subject}, #{content}, #{file1}, sysdate,  
				 #{readcnt}, #{ref},#{reflevel},#{refstep})
  </insert>
  
  
  
  <update  id="update"  parameterType="notice">
  update  notice 
  set name=#{name},subject=#{subject},content=#{content},file1=#{file1} 
  where num=#{num}
  </update>
  
  
 
   <delete  id="delete"  parameterType="int">
   delete from notice where num=#{value}
  </delete>
  
  
</mapper>
